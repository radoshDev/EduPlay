generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  avatar String
  email  String @unique
  name   String
}

model creaturesCategories {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  imageUrl    String?
  slug        String      @unique
  description String?
  creatures   creatures[]
}

model creatures {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  media       String[]
  name        String
  slug        String
  description String?
  category    creaturesCategories @relation(fields: [categoryId], references: [id])
  categoryId  String              @db.ObjectId

  @@unique([slug, categoryId])
}
