generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model accounts {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  role     Role    @default(user)
  users    users[]
}

model users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  avatar    String
  name      String
  account   accounts @relation(fields: [accountId], references: [id])
  accountId String   @db.ObjectId

  @@unique([name, accountId])
}

model creaturesCategories {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  imageUrl    String?
  slug        String      @unique
  description String?
  creatures   creatures[]
}

model creatures {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  media       String[]
  name        String
  slug        String
  description String?
  category    creaturesCategories @relation(fields: [categoryId], references: [id])
  categoryId  String              @db.ObjectId

  @@unique([slug, categoryId])
}
